{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "src/core/generated-plugins.ts",
    "src/core/generated-resources.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__tests__/**",
    "tests-vitest/**/*",
    "plugins/**/*"
  ]
}
